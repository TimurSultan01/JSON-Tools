<Window x:Class="JSON_Tools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http:/a/schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Tools"
        mc:Ignorable="d"
        Title="JSON-Tool" Height="450" Width="700">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar with buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <!-- Button for Import -->
            <Button Content="JSON laden"
                    Click="LoadButton_Click"
                    Padding="10,5"
                    Margin="0,0,10,0"/>

            <!-- Button for Export -->
            <Button Content="Excel Export"
                    Click="ExportButton_Click"
                    Command="{Binding ExportToExcelCommand}"
                    Padding="10,5"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">

                    <!-- View for Json Fromat 1 -->
                    <DataGrid ItemsSource="{Binding Json1Orders}" Visibility="{Binding Vis1}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding OrderId}"/>
                            <DataGridTextColumn Header="Kunde" Binding="{Binding Customer}" Width="*"/>
                            <DataGridTextColumn Header="Datum" Binding="{Binding Created, StringFormat=d}"/>
                            <DataGridTextColumn Header="Gesamtwert" Binding="{Binding Amount, StringFormat=C2}" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- View for Json Format 2 -->
                    <DataGrid ItemsSource="{Binding Json2Orders}" Visibility="{Binding Vis2}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding OrderId}"/>
                            <DataGridTextColumn Header="Kunde" Binding="{Binding Customer}" Width="*"/>
                            <DataGridTextColumn Header="Datum" Binding="{Binding Created, StringFormat=d}"/>
                            <DataGridTextColumn Header="Anzahl Artikel" Binding="{Binding Items.Count}"/>
                        </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}"/>
                                        <DataGridTextColumn Header="Menge" Binding="{Binding Qty}"/>
                                        <DataGridTextColumn Header="Preis" Binding="{Binding Price, StringFormat=C2}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>

                    <!-- View for Json Format 3 -->
                    <DataGrid ItemsSource="{Binding Json3Orders}" Visibility="{Binding Vis3}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding OrderId}"/>
                            <DataGridTextColumn Header="Kunde" Binding="{Binding Customer}" Width="*"/>
                            <DataGridTextColumn Header="Datum" Binding="{Binding Created, StringFormat=d}"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                            <DataGridTextColumn Header="Vertreter" Binding="{Binding SalesRep}"/>
                            <DataGridTextColumn Header="Lieferung nach" Binding="{Binding Delivery.Address}" Width="*"/>
                            <DataGridTextColumn Header="Lieferdatum" Binding="{Binding Delivery.DeliveryDate, StringFormat=d}"/>
                </DataGrid.Columns>
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}"/>
                                        <DataGridTextColumn Header="Menge" Binding="{Binding Qty}"/>
                                        <DataGridTextColumn Header="Preis" Binding="{Binding Price, StringFormat=C2}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>

                </Grid>

                <!-- Statusbar -->
                <StatusBar Grid.Row="2">
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StatusBar>
    </Grid>
</Window>
